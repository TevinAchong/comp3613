<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/home.css">
    <title><%=title%></title>
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    
    <div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>

    <!--Word cloud-->
    <script src="https://www.amcharts.com/lib/4/core.js"></script>
    <script src="https://www.amcharts.com/lib/4/charts.js"></script>
    <script src="https://www.amcharts.com/lib/4/plugins/wordCloud.js"></script>
    <script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/wordcloud.js"></script>

    <div id="chartdiv"></div>

    <script src="js/stats.js"></script>
    <script>
        var datas = "<%=tweets%>";
        
        var tweets = datas.split("|||");
        var sentiments = tweets[0];
        var texts = tweets[1];
        var locations = tweets[2];
        //console.log(typeof(locations[0]));

        for(var i = 0; i<texts.length; i++){
            texts[i] = texts[i].replace('&#39', '\'');
        }
        
        for(var i = 0; i<locations.length; i++){
            locations[i] = locations[i].replace('&#39', '\'');
        }

        var date_since = "<%=date%>";
        var company_name = "<%=company_name%>"

        //console.log(locations);
        
        sentiments = sentiments.substring(1, sentiments.length-1)
        sentiments = sentiments.split(",");
        var stats = [];
        var pos = 0, neg = 0, neu = 0;
        for (var i = 0; i < sentiments.length; i += 1) {
            stats[i] = parseInt(sentiments[i]);
            if (stats[i] == 0)
                neu +=1;
            else if (stats[i] == 1) 
                pos += 1;
            else
                neg += 1;
        }
        pos = pos/stats.length * 100;
        neu = neu/stats.length * 100;
        neg = neg/stats.length * 100;


        //console.log(texts);

        Highcharts.chart('container', {
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false,
                type: 'pie'
            },
            title: {
                text: 'Twitter Sentiments about ' + company_name.toUpperCase() + ' since ' + date_since
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: false
                },
                showInLegend: true
                }
            },
            series: [{
                name: 'Reactions',
                colorByPoint: true,
                data: [{
                name: 'Positive',
                y: pos,
                }, {
                name: 'Neutral',
                y: neu
                }, {
                name: 'Negative',
                y: neg
                }]
            }]
        });
        
        // WORD CLOUD
        var lines = locations.split(/[,\. ]+/g),
        data = Highcharts.reduce(lines, function (arr, word) {
            var obj = Highcharts.find(arr, function (obj) {
                return obj.name === word;
            });
            if (obj) {
                obj.weight += 1;
            } else {
                obj = {
                    name: word,
                    weight: 1
                };
                arr.push(obj);
            }
            return arr;
        }, []);

        Highcharts.chart('chartdiv', {
            series: [{
                type: 'wordcloud',
                data: data,
                minFontSize: 7,
                style: {
                    fontFamily: 'Arial',
                },
                name: 'Occurrences'
            }],
            title: {
                text: 'Where the Tweeters are from'
            }
        });
    </script>

</body>
</html>